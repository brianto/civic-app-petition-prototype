<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default" style="margin-top: 120px;">
      <div class="panel-heading">
        <span class="panel-heading lead">Resident Sign In</span>
      </div>
      
      <div class="panel-body">
        <%= form_for :user_session,
            :html => {
              :class => "form",
              :role => "form"
            } do |login| %>
    
          <div class="form-group">
            <%= login.label :email %>
            <%= login.email_field :email, :class => "form-control" %>
          </div>
          
          <div class="form-group">
            <%= login.label :password %>
            <%= login.password_field :password, :class => "form-control" %>
          </div>
          
          <%= login.submit "Sign In", :class => "btn btn-success" %>
          
          or
          
          <span data-no-turbolink>
            <%= link_to "Sign Up", new_resident_path, :class => "btn btn-primary" %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
