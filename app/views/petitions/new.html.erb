
<div class="row" style="padding-top: 2em">

<div class="col-md-8" style="padding-top: 4em">
<%= form_for @petition,
  :html => {
    "ng-controller" => "NewPetitionController",
    :role => "form",
    :class => "form-horizontal single_form"
  } do |p| %>
  
  <div class="form-group" ng-class="{ 'has-error': !validation.title.isValid() }">
  	<%= p.label :title, :class=> "col-sm-2 control-label" %>
  	<div class="col-sm-8">
  		<%= p.text_field :title,
  		  "ng-model" => "model.title",
  		  :class => "form-control",
  		  :placeholder => "Petiton Title"%>
  	<p class="help-block error" ng-show="!validation.title.isValid()">{{ validation.title.errorMessage() }}</p>
  	</div>	
  </div>
  
  <div class="form-group" ng-class="{ 'has-error': !validation.statement.isValid() }">
  	<%= p.label :statement, :class => "col-sm-2 control-label"%>
  	<div class="col-sm-8">
  		<%= p.text_area :statement,
        "ng-model" => "model.statement",
  		  :class => "form-control",
  		  :placeholder => "Mission Statement",
  		  :rows => "6"%>
  	<p class="help-block text-error" ng-show="!validation.statement.isValid()">{{ validation.statement.errorMessage() }}</p>
  	</div>
  </div>
  
  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-10">
  		<%= p.submit \
  		  "ng-disabled" => "!validation.allValid()",
  		  :class => "btn btn-default" %>
  	</div>
  </div>
  
<% end %>
</div>
<div class="col-md-4">
    <h3>Preview</h3><p class="help-block">HINT: You can use <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown!</a></p>
    <hr/>
    <div id="preview_pane">

    </div>
  </div>
</div>
