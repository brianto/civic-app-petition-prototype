<%= form_for @petition, :html => {:role => "form", :class => "form-horizontal"} do |p| %>
  <div class="form-group">
  	<%= p.label :title, :class=> "col-sm-2 control-label" %>
  	<div class="col-sm-6">
  		<%= p.text_field :title, :class => "form-control", :placeholder => "Petiton Title"%>
  	</div>
  </div>
  <div class="form-group">
  	<%= p.label :statement, :class => "col-sm-2 control-label"%>
  	<div class="col-sm-6">
  		<%= p.text_area :statement, :class => "form-control", :placeholder => "Mission Statement", :rows => "6"%>
  	</div>
  </div>
  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  		<%= p.submit :class => "btn btn-default" %>
  	</div>
  </div>
<% end %>




<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>