<form
  id="search_form"
  ng-controller="SearchController"
  class="form form-horizontal">
  
	<div class="form-group">
  	<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10">
  		<input
  		  id="query"
  		  ng-model="model.query"
  		  class="form-control" 
  		  type="text"
  		  placeholder="Search for a petition..." />
  	</div>
  	
  	<button
  	 ng-click="handlers.search()"
  	 class="btn btn-primary col-lg-2 col-md-2 col-sm-2 col-xs-2">
     Search
    </button>
	</div>
	
  <ul>
	  <li ng-repeat="result in model.results">
	    <a href="{{ result.url }}">{{ result.title }}</a>
    </li>
  </ul>
</form>
