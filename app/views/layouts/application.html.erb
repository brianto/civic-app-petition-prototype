<!DOCTYPE html>
<html>
<head>
  <title><%= @constants.site_title %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="civic">
  <%= render :partial => "partials/navigation" %>
  
  <%= content_for :top %>
  
  <div class="container">
  	<%= yield %>
  </div>
  
  <!-- Fancy footer -->
  <div id="footer">
  	<div class="container">
    	<p class="text-muted">&copy; <%= @constants.site_title %> <%= Date.today.year %></p>
    </div>
  </div>
</body>
</html>